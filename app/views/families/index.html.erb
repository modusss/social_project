<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Families" %>

  <h1 class="text-3xl font-bold text-center mb-6">Lista de Famílias</h1>

  <div class="flex justify-between items-center mb-6">
    <div class="w-1/2">
      <input type="text" placeholder="Pesquisar por família" class="w-full px-4 py-2 border rounded-lg">
    </div>
    <div>
      <%= link_to "+ Nova família", new_family_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
  </div>

  <%= data_table(@rows) %>
</div>
