<div class="member-container nested-fields bg-gray-50 border border-gray-200 rounded-lg p-6 relative" data-member-container>
  <%# Número do membro no canto superior esquerdo %>
  <div class="top-2 left-2 bg-blue-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-sm font-medium member-number" style="margin-bottom: 15px;">
    <%= f.object.index %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <%# Nome %>
    <div>
      <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "Nome completo" %>
    </div>

    <%# Data de Nascimento %>
    <div>
      <%= f.label :birth_date, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center gap-4">
        <%= f.date_field :birth_date, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <span class="text-sm text-gray-500">ou</span>
        <%= f.number_field :age, 
            class: "block w-24 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Idade" %>
      </div>
    </div>
  </div>

  <%# CPF - Novo campo %>
  <div class="mb-6">
    <%= f.label :cpf, "CPF", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :cpf, 
        class: "block w-full md:w-64 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
        placeholder: "000.000.000-00",
        maxlength: "14",
        data: { controller: "input-mask", input_mask_type_value: "cpf" } %>
  </div>

  <%# Papel na Família %>
  <div class="mb-6">
    <%= f.label :role, "Papel na Família", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-x-6 gap-y-3">
      <%# Pai e Mãe %>
      <div class="flex items-center">
        <%= f.radio_button :role, "pai", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_pai, "Pai", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :role, "mãe", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_mãe, "Mãe", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      
      <%# Marido e Esposa %>
      <div class="flex items-center">
        <%= f.radio_button :role, "marido", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_marido, "Marido", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :role, "esposa", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_esposa, "Esposa", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      
      <%# Filho e Filha %>
      <div class="flex items-center">
        <%= f.radio_button :role, "filho", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_filho, "Filho", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :role, "filha", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_filha, "Filha", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      
      <%# Acompanhante e Paciente %>
      <div class="flex items-center">
        <%= f.radio_button :role, "acompanhante", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_acompanhante, "Acompanhante", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :role, "paciente", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_paciente, "Paciente", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
      
      <%# Não definir (sozinho na última linha) %>
      <div class="flex items-center col-span-2 md:col-span-4 mt-2">
        <%= f.radio_button :role, "", 
            class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :role_, "Não definir", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>
  </div>

  <%# Informações Adicionais %>
  <div class="border-t border-gray-200 pt-4 mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-4">Informações Adicionais</h4>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="flex items-center">
        <%= f.check_box :can_read, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :can_read, "Sabe ler?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div class="flex items-center">
        <%= f.check_box :lives_in_house, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :lives_in_house, "Mora na casa?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div class="flex items-center">
        <%= f.check_box :lives_with_partner, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :lives_with_partner, "Vive com cônjuge/parceiro?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>
    
    <%# Novos campos adicionais %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <div class="flex items-center">
        <%= f.check_box :attends_church, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
        <%= f.label :attends_church, "Congrega em igreja?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>

      <div>
        <%= f.label :disability, "Deficiência física ou doença", 
            class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :disability, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Descreva a deficiência ou doença" %>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :shirt_size, "Tamanho de camisa", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :shirt_size, 
            [["PP", "PP"], ["P", "P"], ["M", "M"], ["G", "G"], ["GG", "GG"], ["XG", "XG"], ["XXG", "XXG"]], 
            { include_blank: "Selecione" }, 
            { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" } %>
      </div>

      <div>
        <%= f.label :pants_size, "Tamanho de calça", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :pants_size, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            min: 34, max: 60, step: 2,
            placeholder: "Ex: 38, 40, 42, etc." %>
      </div>
    </div>

    <div class="mt-4">
      <%= f.label :shoe_size, "Tamanho do calçado", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :shoe_size, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "Ex: 38, 42, etc." %>
    </div>
  </div>

  <%# Informações de Emprego e Renda - Novos campos %>
  <div class="border-t border-gray-200 pt-4 mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-4">Informações de Emprego e Renda</h4>
    
    <div class="mb-6">
      <%# Profissão %>
      <div class="mb-4">
        <%= f.label :profession, "Profissão", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :profession, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Ex: Pedreiro, Professora, etc." %>
      </div>
    </div>

    <%# Renda %>
    <%# Está empregado? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= f.label :employed, class: "flex items-center" do %>
        <%= f.check_box :employed, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2",
            data: { controller: "toggle", action: "toggle#toggle", "toggle-target": "checkbox", "toggle-show": "income-field-#{f.object_id}" } %>
        <span class="text-sm text-gray-700">Está empregado?</span>
      <% end %>
    <div id="income-field-<%= f.object_id %>" class="<%= 'hidden' unless f.object.employed %> mb-6">
      <%= f.label :income, "Renda", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative rounded-md shadow-sm">
        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
          <span class="text-gray-500 sm:text-sm">R$</span>
        </div>
        <%= f.number_field :income, step: '0.01', 
            class: "block w-full rounded-md border-gray-300 pl-8 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>
    </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%# Possui benefício? %>
      <div>
        <%= f.label :has_benefit, class: "flex items-center" do %>
          <%= f.check_box :has_benefit, 
              class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 mr-2",
              data: { controller: "toggle", action: "toggle#toggle", "toggle-target": "checkbox", "toggle-show": "benefit-value-field-#{f.object_id}" } %>
          <span class="text-sm text-gray-700">Possui benefício?</span>
        <% end %>
      </div>

      <%# Valor do benefício %>
      <div id="benefit-value-field-<%= f.object_id %>" class="<%= 'hidden' unless f.object.has_benefit %>">
        <%= f.label :benefit_value, "Valor do benefício", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative rounded-md shadow-sm">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <span class="text-gray-500 sm:text-sm">R$</span>
          </div>
          <%= f.number_field :benefit_value, step: '0.01', 
              class: "block w-full rounded-md border-gray-300 pl-8 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%# Já aceitou Jesus %>
    <div class="flex items-center">
      <%= f.check_box :firm_in_faith, 
          class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
      <%= f.label :firm_in_faith, "Já aceitou Jesus", 
          class: "ml-2 text-sm text-gray-700" %>
    </div>

    <%# Botão Remover %>
    <%= link_to_remove_association f, class: "inline-flex items-center text-sm text-red-600 hover:text-red-900", data: { action: "click->member-numbering#updateNumbers" } do %>
      <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Remover membro
    <% end %>
  </div>
</div>