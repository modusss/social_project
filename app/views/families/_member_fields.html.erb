<div class="member-container nested-fields">
  <div class="my-5" style="display: flex; flex-wrap: wrap; gap: 1rem;">
    <div style="flex: 1 1 300px">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
    </div>

    <div style="flex: 1 1 300px">
      <%= f.label :role, "Papel familiar" %>
      <%= f.select :role, 
                   options_for_select([
                     ["avô", "avô"], 
                     ["avó", "avó"], 
                     ["pai", "pai"], 
                     ["mãe", "mãe"], 
                     ["filho", "filho"], 
                     ["filha", "filha"]
                   ], f.object.role),
                   {},
                   class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
    </div>
  </div>

  <div class="mb-4">
    <%= f.label :age, "Idade (ou preencha a data de nascimento)" %>
    <%= f.number_field :age, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-30" %>
  </div>

  <div class="mb-4">
    <%= f.label :birth_date, "Data de nascimento (ou preencha a idade)" %>
    <%= f.date_field :birth_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-30" %>
  </div>

  <div class="mb-4">
    <%= f.label :firm_in_faith, "Firme com Jesus?", class: "mr-2" %>
    <%= f.check_box :firm_in_faith, class: "shadow rounded-md border border-gray-400 outline-none" %>
  </div>

  <%= link_to_remove_association f, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-lg border border-red-500 hover:bg-red-100 transition duration-300 ease-in-out inline-flex items-center" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
    Remover membro
  <% end %>