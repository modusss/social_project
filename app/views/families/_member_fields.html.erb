<div class="member-container nested-fields bg-gray-50 border border-gray-200 rounded-lg p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <%# Nome %>
    <div>
      <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "Nome completo" %>
    </div>

    <%# Data de Nascimento %>
    <div>
      <%= f.label :birth_date, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center gap-4">
        <%= f.date_field :birth_date, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <span class="text-sm text-gray-500">ou</span>
        <%= f.number_field :age, 
            class: "block w-24 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Idade" %>
      </div>
    </div>
  </div>

  <%# Papel na Família %>
  <div class="mb-6">
    <%= f.label :role, "Papel na Família", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="flex flex-wrap gap-4">
      <% [["Pai", "pai"], ["Mãe", "mãe"], ["Filho", "filho"], ["Filha", "filha"], ["Parente", "parente"], ["Não definir", '']].each do |label, value| %>
        <div class="flex items-center">
          <%= f.radio_button :role, value, 
              class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label "role_#{value}", label, 
              class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%# Firme na Fé %>
    <div class="flex items-center">
      <%= f.check_box :firm_in_faith, 
          class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
      <%= f.label :firm_in_faith, "Firme na fé", 
          class: "ml-2 text-sm text-gray-700" %>
    </div>

    <%# Botão Remover %>
    <%= link_to_remove_association f, class: "inline-flex items-center text-sm text-red-600 hover:text-red-900" do %>
      <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Remover membro
    <% end %>
  </div>
</div>