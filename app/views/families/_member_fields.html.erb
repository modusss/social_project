<div class="member-container nested-fields">
  <div class="my-5" style="display: flex; flex-wrap: wrap; gap: 1rem;">
    <div style="flex: 1 1 300px">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
    </div>


  </div>

  <div class="flex space-x-4 mb-4">
    <div class="flex-1">
      <%= f.label :age, "Idade", class: "block mb-2 text-sm font-medium text-gray-700" %>
      <div class="relative">
        <%= f.number_field :age, class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2" %>
      </div>
    </div>

    <div class="flex-1">
      <%= f.label :birth_date, "Data de nascimento", class: "block mb-2 text-sm font-medium text-gray-700" %>
      <%= f.date_field :birth_date, class: "block w-full shadow rounded-md border border-gray-400 outline-none px-3 py-2" %>
    </div>
  </div>

  <p class="mt-1 text-xs text-gray-500 mb-4">Preencha a data de nascimento para atualizar a idade automaticamente</p>

  <div class="mb-4">
    <%= f.label :firm_in_faith, "Firme com Jesus?", class: "mr-2" %>
    <%= f.check_box :firm_in_faith, class: "shadow rounded-md border border-gray-400 outline-none" %>
  </div>

 <%= link_to_remove_association "Remover membro", f, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-lg border border-red-500 hover:bg-red-100 transition duration-300 ease-in-out inline-flex items-center" %>
</div>
