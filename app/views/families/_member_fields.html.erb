<div class="member-container nested-fields bg-gray-50 border border-gray-200 rounded-lg p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <%# Nome %>
    <div>
      <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, 
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          placeholder: "Nome completo" %>
    </div>

    <%# Data de Nascimento %>
    <div>
      <%= f.label :birth_date, "Data de Nascimento", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center gap-4">
        <%= f.date_field :birth_date, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        <span class="text-sm text-gray-500">ou</span>
        <%= f.number_field :age, 
            class: "block w-24 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Idade" %>
      </div>
    </div>
  </div>

  <%# Papel na Família %>
  <div class="mb-6">
    <%= f.label :role, "Papel na Família", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <div class="flex flex-wrap gap-4">
      <% [["Pai", "pai"], ["Mãe", "mãe"], ["Filho", "filho"], ["Filha", "filha"], ["Parente", "parente"], ["Não definir", '']].each do |label, value| %>
        <div class="flex items-center">
          <%= f.radio_button :role, value, 
              class: "h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= f.label "role_#{value}", label, 
              class: "ml-2 text-sm text-gray-700" %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Informações de Emprego e Renda - Novos campos %>
  <div class="border-t border-gray-200 pt-4 mb-6">
    <h4 class="text-sm font-medium text-gray-900 mb-4">Informações de Emprego e Renda</h4>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
      <%# Profissão %>
      <div>
        <%= f.label :profession, "Profissão", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :profession, 
            class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Ex: Pedreiro, Professora, etc." %>
      </div>

      <%# Está empregado? %>
      <div class="flex items-center h-full pt-6">
        <%= f.check_box :employed, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500",
            data: { controller: "toggle", action: "toggle#toggle", "toggle-target": "checkbox", "toggle-show": "income-field-#{f.object_id}" } %>
        <%= f.label :employed, "Está empregado?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>

    <%# Renda %>
    <div id="income-field-<%= f.object_id %>" class="<%= 'hidden' unless f.object.employed %>">
      <div class="mb-4">
        <%= f.label :income, "Renda", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative rounded-md shadow-sm">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <span class="text-gray-500 sm:text-sm">R$</span>
          </div>
          <%= f.number_field :income, step: '0.01', 
              class: "block w-full rounded-md border-gray-300 pl-8 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%# Possui benefício? %>
      <div class="flex items-center">
        <%= f.check_box :has_benefit, 
            class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500",
            data: { controller: "toggle", action: "toggle#toggle", "toggle-target": "checkbox", "toggle-show": "benefit-value-field-#{f.object_id}" } %>
        <%= f.label :has_benefit, "Possui benefício?", 
            class: "ml-2 text-sm text-gray-700" %>
      </div>

      <%# Valor do benefício %>
      <div id="benefit-value-field-<%= f.object_id %>" class="<%= 'hidden' unless f.object.has_benefit %>">
        <%= f.label :benefit_value, "Valor do benefício", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative rounded-md shadow-sm">
          <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
            <span class="text-gray-500 sm:text-sm">R$</span>
          </div>
          <%= f.number_field :benefit_value, step: '0.01', 
              class: "block w-full rounded-md border-gray-300 pl-8 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%# Firme na Fé %>
    <div class="flex items-center">
      <%= f.check_box :firm_in_faith, 
          class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
      <%= f.label :firm_in_faith, "Firme na fé", 
          class: "ml-2 text-sm text-gray-700" %>
    </div>

    <%# Botão Remover %>
    <%= link_to_remove_association f, class: "inline-flex items-center text-sm text-red-600 hover:text-red-900" do %>
      <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Remover membro
    <% end %>
  </div>
</div>