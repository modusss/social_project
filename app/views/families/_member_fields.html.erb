<div class="member-container nested-fields p-4 border rounded-lg bg-white shadow-sm">
  <!-- Dados básicos: Nome e Papel familiar -->
  <div class="my-5 flex flex-wrap gap-4">
    <div class="flex-1 min-w-[250px]">
      <%= f.label :name, "Nome", class: "block font-semibold text-gray-700" %>
      <%= f.text_field :name, class: "mt-2 block w-full max-w-xs shadow rounded-md border-gray-300 px-3 py-2" %>
    </div>
    <div class="flex-1 min-w-[250px]">
      <%= f.label :role, "Papel", class: "block font-semibold text-gray-700 mb-2" %>
      <div class="flex flex-wrap gap-4">
        <% [["filho", "filho"], ["filha", "filha"], ["pai", "pai"], ["mãe", "mãe"], ["parente", "parente"], ["não definir", '']].each do |label, value| %>
          <div class="flex items-center">
            <%= f.radio_button :role, value, checked: f.object.role == value, class: "form-radio h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500" %>
            <%= f.label :role, label, value: value, class: "ml-2 text-gray-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Campo principal: Data de Nascimento com texto sucinto -->
  <div class="mb-4">
    <%= f.label :birth_date, "Data de Nascimento", class: "block font-bold text-blue-700" %>
    <p class="text-sm text-gray-600 mb-2">
      Informe a data, se possível. Caso não saiba, utilize o campo de idade.
    </p>
    <%= f.date_field :birth_date, class: "block w-full max-w-[150px] shadow rounded-md border-blue-500 px-3 py-2" %>
  </div>

  <!-- Campo secundário: Idade -->
  <div class="mb-4">
    <%= f.label :age, "Idade (se não souber a data)", class: "block font-semibold text-gray-700" %>
    <%= f.number_field :age, class: "mt-2 block w-full max-w-[150px] shadow rounded-md border-gray-300 px-3 py-2" %>
  </div>

  <!-- Checkbox: Firme com Jesus -->
  <div class="mb-4 flex items-center">
    <%= f.check_box :firm_in_faith, class: "shadow rounded-md border-gray-300" %>
    <%= f.label :firm_in_faith, "Firme com Jesus?", class: "ml-2 font-semibold text-gray-700" %>
  </div>

  <!-- Botão para remover membro -->
  <div>
    <%= link_to_remove_association "Remover membro", f, class: "text-red-500 hover:text-red-700 font-medium py-2 px-4 rounded-lg border border-red-500 hover:bg-red-100 transition duration-300 ease-in-out inline-flex items-center" %>
  </div>
</div>