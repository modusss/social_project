<div class="nested-fields">
  <div class="my-5">
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :age, "Idade" %>
    <%= f.number_field :age, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :role, "Papel familiar" %>
    <%= f.select :role, options_for_select(["avô", "avó", "pai", "mãe", "filho", "filha"]), {}, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :birth_date, "Data de nascimento" %>
    <%= f.date_field :birth_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :firm_in_faith, "Firme com Jesus?" %>
    <%= f.check_box :firm_in_faith, class: "shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2" %>
  </div>

  <%= link_to_remove_association "Remover membro", f, class: "text-red-500" %>
</div>