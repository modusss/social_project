<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Visits" %>

  <h1 class="text-3xl font-bold text-center mb-6">Lista de últimas visitas</h1>

  <div class="flex justify-between items-center mb-6">
    <div class="w-1/2">
      <input type="text" placeholder="Pesquisar por família" class="w-full px-4 py-2 border rounded-lg">
    </div>
    <div>
      <%= link_to "+ Nova família visitada", new_visit_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">Data da visita</th>
          <th scope="col" class="px-6 py-3">Nome do visitante</th>
          <th scope="col" class="px-6 py-3">Região</th>
          <th scope="col" class="px-6 py-3">Projeto</th>
          <th scope="col" class="px-6 py-3">Família</th>
          <th scope="col" class="px-6 py-3">Necessidades pendentes</th>
          <th scope="col" class="px-6 py-3">Observações</th>
          <th scope="col" class="px-6 py-3">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @visits.each_with_index do |visit, index| %>
          <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= visit.visit_date.strftime('%d/%m/%Y') %>
            </th>
            <td class="px-6 py-4"><%= visit.user.name %></td>
            <td class="px-6 py-4"><%= visit.visited_project&.region&.name %></td>
            <td class="px-6 py-4"><%= visit.visited_project&.project&.name %></td>
            <td class="px-6 py-4"><%= "#{visit.family.reference_name} (#{visit.family.members.count} pessoas)" %></td>
            <td class="px-6 py-4"><%= visit.pending_needs.first&.description || "N/A" %></td>
            <td class="px-6 py-4"><%= visit.observations.first&.observation || "N/A" %></td>
            <td class="px-6 py-4">
              <%= link_to "Ver", visit_path(visit), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
              <%= link_to "Editar", edit_visit_path(visit), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline ml-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
